<div class="col-md-3">
    <h2>User info</h2>
        <div>
          <td><%= image_tag user.get_profile_image(100,100) %></td>
        </div>
        <table class="table">
          <tbody>
           <tr>
             <th>name</th>
             <th><%= user.name %></th>
           </tr>
           <tr>
             <th>introduction</th>
             <th><%= user.introduction %></th>
           </tr>
          </tbody>
        </table>
        <%= link_to edit_user_path(user),class:"btn mb-2 btn-outline-secondary btn-block" do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
    <%= form_with model: newbook do |f| %>
          <h2>New book</h2>
          <p>Title</p>
          <%= f.text_field :title,class: "mb-3" %>

        <p>Opinion</p>
        <%= f.text_area :body,class: "mb-3" %>
        <%= f.submit 'Create Book', class:"btn btn-success d-block" %>
   <% end %>
</div>