<p class="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <%if @user.errors.any? %>
        <div id="errors">
          <h2><%= @user.errors.count %>errors prohibited this obj from being saved:</h2>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <h2>User info</h2>
      <%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>
        <div>Name</div>
          <%= f.text_field :name, class: "form-control" %>
        <br/>
      <div>Image</div>
        <%= f.file_field :profile_image, accept: "image/*" %>
        <br/>
          <div>Introduction</div>
        <%= f.text_area :introduction, class: "form-control" %>
        <br/>

        <%= f.submit "Update User", class: "btn btn-secondary btn-3sm" %>
      <% end %>

    </div>
  </div>
</div>