<main>

<div class="container">
  <div class="row">
<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

<h1>Editing Book</h1>

<% if @book.errors.any? %>
    <div id="errors">
     <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
         <% end %>
     </ul>
   </div>
  <% end %>

        <%= form_with model:@book do |f| %>
        <div class="form-group w-100">
           <label class="d-block",for="inputTitle">Title</label>
           <%= f.text_field :title,autofocus: true,id:"inputTitle",placeholder:"title" %>
         </div>
         <div class="form-group w-100">
           <label class="d-block",for="inputBody">Opinion</label>
           <%= f.text_area :body,autofocus: true,id:"inputBody",placeholder:"opinion" %>
         </div>
         <button type="submit" class="btn btn-success d-block mb-2">Update Book</button>

         <div class="d-flex">
           <% end %>
           <%= link_to book_path(@book) do %>
             Show
           <% end %>
           <p>|</p>
           <%= link_to books_path do %>
             Back
           <% end %>
         </div>

       </div>
     </div>
   </div>
</main>
