<main>
    <p id="notice"><%= flash[:notice] %></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
    <%= render 'info', user: @user, newbook: @books %>



      <div class="col-md-8 offset-md-1">
       <h2>Book detail</h2>
           <table class="table">
            <tbody>


                   <tr>
                       <td>
                       <%= link_to user_path(@book.user.id) do %>
                        <% if @book.user.profile_image.attached? %>
                          <%= image_tag @book.user.profile_image, size: "100x100" %>
                        <% else %>
                          <%= image_tag 'no_image', size: "100x100" %>
                        <% end %>
                        <br><%= @user.name %>
                       <% end %>
                       </td>
                       <td>
                        <%= link_to book_path(@book.id) do %>
                         <%= @book.title %>
                        <% end %>
                        </td>
                       <td><%= @book.body %></td>
                       <td>
                        <% if @user.id == current_user.id %>
                         <%= link_to edit_book_path(@book.id), class: "btn btn-sm btn-success" do %>
                         Edit
                         <% end %>
                        <% end %>
                       </td>
                       <td>
                        <% if @user.id == current_user.id %>
                         <%= link_to book_path(@book.id), class: "btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に消しますか？" do  %> Destroy
                         <% end %>
                      <% end %>
                  </td>
                </tr>
             </tbody>
       </table>
      </div>
    </div>
  </div>
</main>